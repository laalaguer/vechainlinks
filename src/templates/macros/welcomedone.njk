{% macro modal(modalID) %}
<div class="modal fade" id="{{modalID}}" tabindex="-1" role="dialog" aria-labelledby="{{modalID}}" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container my-4">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 col-md-6 my-5">
                    <h2>You Are All Set,</h2>
                    <p class="font-weight-light">Happy browsing!</p>
                    <button class="btn btn-warning py-2" data-dismiss="modal"><strong>Close</strong></button>
                </div>
                <div class="col-10 col-md-4">
                    {# <img src="img/welcome.png" style="max-width: 240px;"> #}
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endmacro %}