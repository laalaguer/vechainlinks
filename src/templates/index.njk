{% import 'macros/section.njk' as mSection %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-142187300-3"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-142187300-3');
    </script>
    <!-- Meta tags for better SEO -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Free news, updates, projects, tools, explorers on VeChain Blockchain">
    <meta name="author" content="VeChain Community Members">
    <title>VeChain Links</title>
    <!-- Bootstrap v4 CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/fonts.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/blog.css" rel="stylesheet">
    <!-- Custom styles for this tweak -->
    <link href="css/my.css" rel="stylesheet">
  </head>

  <body>
    <div class="container" id="my-body">
      <div id="sticky-header" class="sticky-top bg-white">
        <!-- Navbar -->
        <header class="py-2 border-bottom-thick" id="headline-container">
          <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-1 col-sm-1 col-lg-4 pt-1">
              <a class="btn btn-sm btn-outline-secondary" href="#" style="display:none;">Subscribe News Letter</a>
            </div>
            <div class="col-10 col-sm-10 col-lg-4 text-center">
              <a class="blog-header-logo text-dark" href="#" id="biggest-title">VeChain Links</a>
            </div>
            <div class="col-1 col-sm-1 col-lg-4 d-flex justify-content-end align-items-center">
              <a class="text-muted" href="#" aria-label="Search" style="display:none;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24" focusable="false"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
              </a>
              <!-- <a class="btn btn-sm btn-outline-secondary" href="#">Sign up</a> -->
            </div>
          </div>
        </header>

        <!-- Category line -->
        <div class="nav-scroller pt-2 mb-2 border-bottom-light" >
          <nav class="nav d-flex justify-content-between" id="category-section">
          {% for key, value in categories %}
          <a class="p-2 text-muted text-capitalize" href="#{{ key }}" id="menu-{{ key }}" onclick="jumpToAnchor(this)">{{ value["display"] }}</a>
          {% endfor %}
          </nav>
        </div>
      </div>

      <!-- Introduction line -->
      <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 font-italic">Links to interesting resources on VeChain.</h1>
          <p class="lead my-3"></p>
          <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">Continue reading below...</a></p>
        </div>
      </div>

      <!-- Containers here, each container is a section of cards -->
      {% for categoryKey, categoryValue in categories -%}
      <main role="main" class="container">
        <h3 class="pb-4 mb-4 font-italic border-bottom text-capitalize" id="{{categoryKey}}">
            {{categoryValue.display}}
            <a class="my-anchor" href="#{{categoryKey}}" onclick="jumpToAnchor(this)">
                <svg class="hash-link-icon" aria-hidden="true" height="16" version="1.1" viewBox="0 0 16 16" width="16"><path fill-rule="evenodd" d="M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z"></path></svg>
            </a>
        </h3>
        <div class="row mb-2" id="blogs-section">
        {{ mSection.section(items, categoryKey )}}
        </div>
      </main>
      {%- endfor %}
    </div>

    <button id="to-top-button" type="button" class="btn btn-outline-secondary rounded-circle p-0 hover-button">&#8593;<br>Top</button>
    <footer class="blog-footer py-1 fixed-bottom hidden-footer">
      <p>Email us at <span class="text-primary">admin@vechainlinks.com</span></p>
    </footer>
  </body>
  <script src="js/jquery-3.4.1.min.js"></script>
  <script src="js/main.js"></script>
  <script src="js/scroll.js"></script>
</html>